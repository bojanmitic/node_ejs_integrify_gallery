<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/index.css">
    <title>Students</title>
</head>
<body>
    <div class='container'>
        <h1 class="title">Integrify Students</h1>
        <hr/>
        <div class="main">
            <% data.forEach((student) =>{%>
                <div class="student">
                    <a href="/<%=student.firstName%>">
                    <h2><%= student.firstName %> <%=student.lastName%></h2>   
                    <img class="student-img"   <%if(!student.src){%>
                            src=<%='background2.jpg'%>
                    <%}else{%>
                        src=<%=student.src%> alt =<%=student.alt%> >
                    <%}%>
                </a>
                </div>
            <%})%>
        </div>
        <a   href='/new'><img class="add-btn" src="user.png" alt="user"/></a>
    </div>
</body>
</html>